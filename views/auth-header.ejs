<!doctype html>
<html>
<head>
    <title>Perrot Stock Market Chart</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="https://code.highcharts.com/stock/highstock.js"></script>
<script src="https://code.highcharts.com/stock/modules/exporting.js"></script>
        <script src="js/index.js"></script>
</head>
<body>
<div class="row banner">
    <div class="col-xs-2 padding" style="text-align:right;font-weight:bold">
      <a href="/">StockMarket</a>
    </div>
    <div class="col-xs-1 padding center btn-width" id="home">
      <a href="/profile">Profile</a>
    </div>
    <div class="col-xs-6" style="width:40%">
    </div>
<div class="col-xs-2 padding center  text-nowrap" style="color:white" id="signup">
       <% if (user.local.email) { %>
       		<% if (user.local.name) { %>
	      Hello <%= user.local.name%>
         	<% }else{ %>
	      Hello <%= user.local.email.substring(0,user.local.email.indexOf('@'))%>
         	<% }%>
         <% } %>
    </div>
<div class="col-xs-1 padding center btn-width" id="logout">
      <a href="/logout">Logout</a>
    </div>
  </div>
<script>
$('#home').addClass('bg-lightgray');
</script>
